<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/royalblue"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragmentExample.FragmentTask.FragmentTaskMainActivity"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:background="@color/sc"
            android:ems="10"
            android:hint="@string/enter_url"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            tools:ignore="Autofill,NestedWeights,TouchTargetSizeCheck,TextContrastCheck" />
        <fragment
            android:layout_marginTop="5dp"
            android:id="@+id/frag1task"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            class="com.example.bscssectionabatch20.fragmentExample.FragmentTask.Fragment1task"
            android:layout_weight="1"
            tools:ignore="FragmentTagUsage,NestedWeights,Suspicious0dp">
        </fragment>

        <fragment
            android:layout_marginTop="5dp"
            android:id="@+id/frag2task"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            class="com.example.bscssectionabatch20.fragmentExample.FragmentTask.Fragment2task"
            android:layout_weight="1"
           >
        </fragment>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/button37"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/downloadbtntask"
            tools:ignore="NestedWeights,VisualLintButtonSize" />

        <fragment
            android:layout_marginTop="2dp"
            android:id="@+id/frag3task"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            class="com.example.bscssectionabatch20.fragmentExample.FragmentTask.Fragment3task"
            android:layout_weight="1"
            >
        </fragment>
        <fragment
            android:id="@+id/frag4task"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            class="com.example.bscssectionabatch20.fragmentExample.FragmentTask.Fragment4task"
            android:layout_weight="1"
            tools:ignore="FragmentTagUsage,Suspicious0dp">
        </fragment>

    </LinearLayout>





</LinearLayout>